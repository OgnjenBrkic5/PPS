unit Unit1;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.Controls.Presentation, FMX.Calendar, Unit2 ,FMX.StdCtrls;

type
  TForm1 = class(TForm)
    Calendar1: TCalendar;
    Radnik1: TButton;
    Radnik2: TButton;
    Radnik3: TButton;
    NotificationButton: TButton;
    procedure Radnik1Click(Sender: TObject);
    procedure Radnik2Click(Sender: TObject);
    procedure Radnik3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;


implementation

{$R *.fmx}
{$R *.NmXhdpiPh.fmx ANDROID}
{$R *.LgXhdpiPh.fmx ANDROID}


var imeRadnika: String = '';

procedure TForm1.Radnik1Click(Sender: TObject);
begin
          imeRadnika:= 'Radnik1';
          var drugaForma := TForm2.Create(self);
          drugaForma.Show;
          //slanje vrednosti imeRadnika -radnik1;
end;

procedure TForm1.Radnik2Click(Sender: TObject);
begin
          imeRadnika:= 'Radnik2';
          var drugaForma := TForm2.Create(self);
          drugaForma.Show;
          //slanje vrednosti imeRadnika -radnik2;
end;


procedure TForm1.Radnik3Click(Sender: TObject);
begin
          imeRadnika:= 'Radnik3';
          var drugaForma := TForm2.Create(self);
          drugaForma.Show;
          //slanje vrednosti imeRadnika -radnik3;
end;

end.
